pipeline {
    agent any
	tools{
	maven 'maven' 
		}
    stages {
        stage('Build') {
            steps {
		 sh ''' cd ./newproject/  
                        mvn package '''
		    
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Deploy') {
            steps {
                script{
		deploy adapters: [tomcat9(credentialsId: 'tomcat_manager', path: '', url:'http//16.170.155.136:8091')],
					contextPath: '/sample.jar',
					onFailure: false,
					war: 'newproject/target/sample.jar'
		}
            }
        }
    }
}
