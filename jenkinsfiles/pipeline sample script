pipeline {
agent none
	stages {
		stage ('build')  {
		agent { label 'slave1' }
			steps {
			sh 'sleep 5'
			}
		}
		stage ('test') {
		agent { label 'master' }
			steps {
			sh 'sleep 5'
			}
		}
			stage ('deploy') {
			agent { label 'slave1' }
			steps {
			sh 'sleep 5'
			}
		}
		stage ('build-test') {
		agent { label 'master' }
			steps {
			sh 'sleep 5'
			exit 1
			}
		}
		stage ('build1')  {
		agent { label 'slave1' }
			steps {
			sh 'sleep 5'
			}
		}
	}
}
